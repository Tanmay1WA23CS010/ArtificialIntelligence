#N QUEENS PROBLEM 



# n_queens_all.py
# Finds and prints all solutions to the N-Queens problem (simple backtracking)

def print_board(board):
    N = len(board)
    for r in range(N):
        print(' '.join('Q' if board[r][c] else '.' for c in range(N)))
    print()

def is_safe(board, row, col):
    N = len(board)
    # check column above
    for r in range(row):
        if board[r][col]:
            return False
    # check upper-left diagonal
    r, c = row - 1, col - 1
    while r >= 0 and c >= 0:
        if board[r][c]:
            return False
        r -= 1; c -= 1
    # check upper-right diagonal
    r, c = row - 1, col + 1
    while r >= 0 and c < N:
        if board[r][c]:
            return False
        r -= 1; c += 1
    return True

def place_queens(board, row, solutions):
    N = len(board)
    if row == N:
        # found one solution: copy and store
        solutions.append([row[:] for row in board])
        return
    for col in range(N):
        if is_safe(board, row, col):
            board[row][col] = 1
            place_queens(board, row + 1, solutions)
            board[row][col] = 0

def solve_n_queens(N):
    board = [[0]*N for _ in range(N)]
    solutions = []
    place_queens(board, 0, solutions)
    return solutions

def main():
    try:
        N = int(input("Enter N (board size / number of queens): ").strip())
    except Exception:
        print("Invalid input. Please enter a positive integer.")
        return

    if N <= 0:
        print("N must be a positive integer.")
        return

    print(f"Solving {N}-Queens... (this may take long for N >= 12)")
    solutions = solve_n_queens(N)

    if not solutions:
        print(f"No solutions found for N = {N}.")
        return

    print(f"Found {len(solutions)} solution(s) for N = {N}.\n")

    for i, sol in enumerate(solutions, start=1):
        print(f"Solution #{i}:")
        print_board(sol)

if __name__ == "__main__":
    main()
